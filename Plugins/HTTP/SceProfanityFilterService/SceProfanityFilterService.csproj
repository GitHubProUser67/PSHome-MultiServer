<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>
	<IsPublishable>false</IsPublishable>
	<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  
  <ItemGroup>
		<ProjectReference Include="..\..\..\Servers\ApacheNet\ApacheNet.csproj" />
		<PackageReference Include="System.Text.Json" Version="8.0.5" />
		<PackageReference Include="Costura.Fody" Version="6.0.0">
			<PrivateAssets>all</PrivateAssets>
			<!--<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>-->
		</PackageReference>
	</ItemGroup>

	<Target Name="CopyFilesTargetName" AfterTargets="AfterBuild">
		<ItemGroup>
			<FilesToCopy Include="$(OutDir)SceProfanityFilterService.pdb" />
			<FilesToCopy Include="$(OutDir)SceProfanityFilterService.deps.json" />
			<FilesToCopy Include="$(OutDir)SceProfanityFilterService.dll" />
			<FilesToCopy1 Include="$(OutDir)WatsonWebserver.Core.dll" />
		</ItemGroup>

		<PropertyGroup>
			<FilesExist Condition="Exists(@(FilesToCopy))">true</FilesExist>
			<FilesExist Condition="Exists(@(FilesToCopy1))">true</FilesExist>
		</PropertyGroup>
		
		<Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(OutDir)\static\apachenet-plugins\SceProfanityFilterService\" Condition="$(FilesExist)" />
		<Copy SourceFiles="@(FilesToCopy1)" DestinationFolder="$(OutDir)\static\apachenet-plugins\SceProfanityFilterService\" Condition="$(FilesExist)" />

		<Delete Files="@(FilesToCopy)" Condition="$(FilesExist)" />

	</Target>

	<ItemGroup>
		<Content Include="static\**\*.*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
